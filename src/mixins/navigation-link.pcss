/*noinspection PostCssNesting*/
@define-mixin navigation-link {
    text-decoration: none;
    color: var(--gray-12);
    border-radius: var(--radius-3);
    outline-offset: calc(var(--space-1) * -1);

    &:hover {
        background: var(--gray-4);
    }
    &:focus-visible {
        outline: 2px solid var(--focus-8);
    }
}
